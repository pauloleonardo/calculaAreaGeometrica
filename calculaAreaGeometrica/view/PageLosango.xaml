<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calculaAreaGeometrica.view.PageLosango">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Área do losango" />
            <Label Text="Digite o valor da diagonal maior do losango!" />
            <Entry x:Name="txt_dMaior"
                   Keyboard="Numeric"/>
            <Label Text="Digite o valor da diagonal menor do losango!" />
            <Entry x:Name="txt_dMenor"
                   Keyboard="Numeric"/>
            
            <Label x:Name="resultado"
                   Text="Resultado"
                   HorizontalOptions="Center"
                   FontSize="Large"
                   FontAttributes="Bold"/>
            <Button Text="Calcular área" Clicked="btnAreaLos"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>