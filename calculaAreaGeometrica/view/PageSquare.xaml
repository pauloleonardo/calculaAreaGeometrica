<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calculaAreaGeometrica.view.PageSquare">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Área do quadrado" />
            <Label Text="Digite o valor do lado do quadrado!" />
            <Entry x:Name="txt_lado"
                   Keyboard="Numeric"/>
            <Label x:Name="resultado"
                   Text="Resultado"
                   HorizontalOptions="Center"
                   FontSize="Large"
                   FontAttributes="Bold"/>
            <Button Text="Calcular área" Clicked="btnAreaQuad"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>